{
  "name": "next-js-boilerplate",
  "type": "module",
  "author": "Ixartz (https://github.com/ixartz)",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev:spotlight": "npx @spotlightjs/spotlight",
    "dev:next": "next dev --turbopack",
    "dev": "run-p dev:*",
    "build:next": "next build",
    "build": "run-p db-server:memory build:* --race",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:types": "tsc --noEmit --pretty",
    "check:deps": "knip",
    "check:i18n": "i18n-check -l src/locales -s en -u src -f next-intl",
    "commit": "cz",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "db:generate": "drizzle-kit generate",
    "db:push": "dotenv drizzle-kit push",
    "db:seed": "dotenv tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "vitest run --config .storybook/vitest.config.mts",
    "build-storybook": "storybook build",
    "shadcn:add": "npx shadcn@latest add",
    "build:content": "contentlayer2 build"
  },
  "dependencies": {
    "@arcjet/next": "^1.0.0-beta.10",
    "@hookform/resolvers": "^5.2.1",
    "@logtape/logtape": "^1.0.4",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/nextjs": "^9.44.2",
    "@t3-oss/env-nextjs": "^0.13.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "contentlayer2": "^0.5.8",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.4",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.539.0",
    "motion": "^12.23.12",
    "nanoid": "^5.1.5",
    "next": "^15.4.6",
    "next-contentlayer2": "^0.5.8",
    "next-intl": "^4.3.4",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "posthog-js": "^1.258.6",
    "react": "19.1.1",
    "react-day-picker": "^9.8.1",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@chromatic-com/playwright": "^0.12.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@commitlint/prompt-cli": "^19.8.1",
    "@electric-sql/pglite-socket": "^0.0.12",
    "@eslint-react/eslint-plugin": "^1.52.3",
    "@faker-js/faker": "^9.9.0",
    "@lingual/i18n-check": "^0.8.4",
    "@next/bundle-analyzer": "^15.4.6",
    "@next/eslint-plugin-next": "^15.4.6",
    "@playwright/test": "^1.54.2",
    "@spotlightjs/spotlight": "^3.0.2",
    "@storybook/addon-a11y": "^9.1.1",
    "@storybook/addon-docs": "^9.1.1",
    "@storybook/addon-vitest": "^9.1.1",
    "@storybook/nextjs-vite": "^9.1.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "checkly": "^6.3.1",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.1",
    "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
    "inquirer": "^9.3.7",
    "knip": "^5.62.0",
    "lefthook": "^1.12.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-code-titles": "^1.2.0",
    "rehype-pretty-code": "^0.14.1",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-code-import": "^1.2.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.7",
    "storybook": "^9.1.1",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
